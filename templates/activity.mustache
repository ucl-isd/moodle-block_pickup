{{!
    @template blocks_pickup/activity
    Example context (json):
    {

        "purpose": "content",
        "icon": "monologo url",
        "url": "https://moodle.com/",
        "type": "file",
        "name": "The fullname of the activity",
        "coursename": "The name of the course"

    }
}}

<div class="media bg-white p-3 position-relative">

    <div class="activityiconcontainer {{purpose}} mr-2">
        <img class="icon activityicon" src="{{icon}}" alt="">
    </div>

    <div class="media-body">
        <div class="small text-capitalize">{{type}}</div>
        <div class="activityname">
            <a href="{{url}}" class="stretched-link font-weight-bold">{{name}}</a>
        </div>
        <div class="small">{{coursename}}</div>
    </div>

</div>